# Server Configuration
PORT=3002
NODE_ENV=development

# API Configuration
PLATFORM_API_URL=https://api.yourplatform.com
API_KEY=your-api-key-here

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3002,https://yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Widget Configuration
WIDGET_CACHE_TTL=300
DEFAULT_CAMPAIGN_TIMEOUT=5000

# Security
JWT_SECRET=your-jwt-secret-here
ENCRYPT_KEY=your-encryption-key-here

# Analytics (optional)
ANALYTICS_ENDPOINT=https://analytics.yourplatform.com
ANALYTICS_API_KEY=your-analytics-key-here